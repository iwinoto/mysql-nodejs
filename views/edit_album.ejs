<%- include layouts/header.ejs %>

        <div class="page-data">

            <form method="post" action="/albums/edit/<%=data[0].id%>">
                <table cellpadding="11">
                <tr>
                    <td class="label">Title</td><td>: <input type="text" name="title" value="<%=data[0].title%>" required></td>
                 </tr>
                 <tr>
                    <td class="label" valign="top">Artist</td>
                    <td valign="top">:
                        <textarea name="artist" required cols="30" rows="5"><%=data[0].artist%></textarea>
                    </td>
                </tr>
                <tr>
                    <td class="label">Release Year</td><td>: <input type="text" value="<%=data[0].release_year%>" name="release_year" required></td>
                 </tr>
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                    </td>
                 </tr>
                </table>
            </form>

        </div>

